<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/text_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:hint="Enter text here."
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/digit_one_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="15dp"
                android:text="@string/_1"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/digit_two_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:text="2"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/digit_three_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:text="3"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/delete_operation_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                app:backgroundTint="#e2e3e1"
                app:icon="@android:drawable/ic_input_delete" />


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/digit_four_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="15dp"
                android:text="4"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/digit_five_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:text="5"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/digit_six_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:text="6"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />


            <Button
                android:id="@+id/divide_operation_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:text="รท"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/digit_seven_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="15dp"
                android:text="7"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/digit_eight_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:text="8"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/digit_nine_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:text="9"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/add_operation_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:text="+"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/multiply_operation_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="15dp"
                android:text="ร"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/digit_zero_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:text="0"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/subtract_operation_button"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:text="-"
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />

            <Button
                android:id="@+id/calc_result_textview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="15dp"
                android:text="="
                android:textColor="@color/black"
                app:backgroundTint="#ffffff" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>